[
    {
        "id": "whatsapp-redirect",
        "name": "WhatsApp Redirect",
        "version": "1.0.0",
        "author": "Invoices Reader",
        "description": "Send invoice summaries to WhatsApp and copy invoice image to clipboard for quick sharing.",
        "capabilities": [
            "ui:toolbar",
            "data:read",
            "data:write"
        ],
        "min_app_version": "1.0.0",
        "main": "main.py",
        "plugin_class": "WhatsAppRedirectPlugin",
        "path": "plugins/whatsapp-redirect"
    },
    {
        "id": "whatsapp_agent",
        "name": "WhatsApp AI Agent",
        "version": "1.0.0",
        "author": "Community",
        "description": "Integrates Invoices Reader with WhatsApp via an embedded Playwright browser. Scan the QR code to connect and use your WhatsApp as an AI agent.",
        "min_app_version": "1.0.0",
        "main": "__init__.py",
        "plugin_class": "WhatsAppAgentPlugin",
        "capabilities": [
            "ui:toast",
            "ui:settings",
            "ui:toolbar",
            "ui:section",
            "data:persist",
            "network:access",
            "file:read",
            "file:write"
        ],
        "dependencies": [
            "playwright>=1.40.0"
        ],
        "category": "communication",
        "path": "plugins/whatsapp_agent"
    }
]